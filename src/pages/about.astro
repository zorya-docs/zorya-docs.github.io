---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

import bastiao from '~/assets/images/bastiao.jpg';
import cc from '~/assets/images/cc.jpeg';
import carolina from '~/assets/images/carolina.png';
import diogo from '~/assets/images/diogo.jpg';
import henrique from '~/assets/images/henrique.jpg';
import joao from '~/assets/images/joao.png';
import raquel from '~/assets/images/raquel.jpg';

const metadata = {
  title: 'About Us',
};

const teamMembersTop = [
  {
    title: 'Carolina Prata',
    description: 'Team Manager',
    image: carolina.src,
    link: 'https://github.com/carolmprata',
    email: 'carolinaprata@ua.pt',
  },
  {
    title: 'Diogo Fernandes',
    description: 'DevOps Master',
    image: diogo.src,
    link: 'https://github.com/diogux',
    email: 'diogomiguel.fernandes@ua.pt',
  },
  {
    title: 'Henrique Oliveira',
    description: 'Product Owner',
    image: henrique.src,
    link: 'https://github.com/Hbmo1',
    email: 'henrique.bmo@ua.pt',
  },
];

const teamMembersBottom = [
  {
    title: 'João Varela',
    description: 'Architect',
    image: joao.src,
    link: 'https://github.com/joaovarela14',
    email: 'joaovarela@ua.pt',
  },
  {
    title: 'Raquel Vinagre',
    description: 'UI Designer',
    image: raquel.src,
    link: 'https://github.com/raquelvinagre',
    email: 'raquelvinagre@ua.pt',
  }
];

const advisors = [
  {
    title: 'Luís Bastião',
    description: 'Advisor',
    image: bastiao.src,
    email: 'bastiao@live.ua.pt'
  },
  {
    title: 'Carlos Costa',
    description: 'Co-Advisor',
    image: cc.src,
    email: 'carlos.costa@ua.pt'
  },
];

const icon = 'tabler:brand-github';
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero tagline="About Us">
    <Fragment slot="title">Meet Our Team</Fragment>
    <Fragment slot="subtitle"
      >We are a group of students from University of Aveiro. Passionate about science and innovation, our goal is to improve workflow quality. With the help of new technologies and a young spirit, we are ready to take on any challenge ahead of us! </Fragment
    >
  </Hero>

  <!-- Team Members Section -->
  <section>
    <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-6">
      <div class="mx-auto mb-8 max-w-screen-sm lg:mb-16">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Our Team</h2>
      </div>

      <!-- Top Row (3 members) -->
      <div class="grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3">
        {
          teamMembersTop.map((member) => (
        <div class="text-center text-gray-500 dark:text-gray-400">
          <a href={member.link} target="_blank" rel="noopener noreferrer">
            <img class="mx-auto mb-4 w-36 h-36 rounded-full" src={member.image} alt={member.title} />
          </a>
          <h3 class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white flex items-center justify-center">
            <a href={member.link} target="_blank" rel="noopener noreferrer" class="flex items-center">
          {member.title}
          {icon && <Icon name={icon} class="w-5 h-5 ml-2" />}
            </a>
          </h3>
          <p class="text-black dark:text-white">{member.description}</p>
          <p>{member.email}</p>
        </div>
          ))
        }
      </div>

      <!-- Bottom Row (2 members, centered) -->
      <div class="grid gap-8 lg:gap-16 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 justify-center mt-4">
        {
          teamMembersBottom.map((member) => (
            <div class="text-center text-gray-500 dark:text-gray-400 mx-auto">
              <a href={member.link} target="_blank" rel="noopener noreferrer">
                <img class="mx-auto mb-4 w-36 h-36 rounded-full" src={member.image} alt={member.title} />
              </a>
              <h3 class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                <a href={member.link} target="_blank" rel="noopener noreferrer" class="flex items-center">
                  {member.title} {icon && <Icon name={icon} class="w-5 h-5 ml-2" />}
                </a>
              </h3>
              <p class="text-black dark:text-white">{member.description}</p>
              <p>{member.email}</p>
                <a href={member.link} target="_blank" rel="noopener noreferrer">
                </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Advisors Section -->
  <section>
    <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-6">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Our Advisors</h2>
      <div class="grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-2">
        {
          advisors.map((advisor) => (
            <div class="text-center text-gray-500 dark:text-gray-400">
              <img class="mx-auto mb-4 w-36 h-36 rounded-full" src={String(advisor.image)} alt={advisor.title} />
              <h3 class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{advisor.title}</h3>
              <p class="text-black dark:text-white">{advisor.description}</p>
              <p>{advisor.email}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
